{{!-- * Create a button in `index.handlebars` that will submit the user input into the database. --}}

<h1>Burgers</h1>

<h2>Burgers to devour</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked>Devoured!<br>
    <input type="radio" name="devoured" value="0">Uneaten
  </div>

  <button type="submit">Add burger</button>
</form>
