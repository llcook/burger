<h1>It's a Burger Buffet!</h1>

<div class="content-container">

<h2>Burger Menu</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<hr/>

<h2>Inventory</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h3>Add to the Menu</h3>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Select stock status:</label><br>
    <input type="radio" name="devoured" value="0"> In stock
    <input type="radio" name="devoured" value="1" checked> Time to restock<br>
  </div>

  <button type="submit">Add burger</button>
</form>
</div>
